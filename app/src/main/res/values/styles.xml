<resources>
    <!-- Main app theme -->
    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Force black background -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Android 12+ splash API -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/launcher_icon</item>

        <!-- After splash, switch to your real theme -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>
